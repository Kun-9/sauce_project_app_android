<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="출력"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textSize="35dp"
            android:paddingTop="55dp"
            android:paddingBottom="55dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/cart1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="없음"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g1"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge2"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/cart2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="없음"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g2"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge3"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/cart3Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="없음"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g3"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge4"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/cart4Name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="없음"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g4"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge5"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/cart5Name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="없음"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart5"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g5"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:id="@+id/cartridge6"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/cart6Name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="없음"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/cart6"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:fontFamily="@font/regular"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:layout_width="10dp"
                        android:fontFamily="@font/regular"
                        android:layout_height="match_parent"
                        android:id="@+id/g6"
                        android:text="g"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical">



        <com.suke.widget.SwitchButton

            app:sb_shadow_effect="true"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:id="@+id/editMode"
            app:sb_checked="false"
            app:sb_enable_effect="true"
            app:sb_show_indicator="true"
            app:sb_checked_color="@color/darkNavy"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="50dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/customOutputSendBtn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_15"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:text="출력 시작"/>

        <Button
            android:id="@+id/saveSourceCompBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_15_gray"
            android:layout_margin="10dp"
            android:text="저장"/>

    </LinearLayout>



</LinearLayout>