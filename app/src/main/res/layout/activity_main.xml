<?xml version="1.0" encoding="utf-8"?>

<!--키보드가 올라갔을 때 채팅창이 가려지는 현상을 해결하고자 RelativeLayout 사용-->
<!--Manifest.xml에서 windowSoftInputMode를 adjustResize로 설정하였음-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    >
<!--    android:background="#D8D8D8"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <!--테스트한 핸드폰의 기종마다 비율이 달라짐-->
        <!--가능한 한 UI를 비율에 종속되도록 설정-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/startBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연결" />

            <Button
                android:id="@+id/customOutputBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="커스텀 출력" />

            <Button
                android:id="@+id/registSoruceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소스 등록" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="Chat log" />

                <EditText
                    android:id="@+id/nameBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/cart1"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cart2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cart3"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cart4"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cart5"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cart6"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginTop="10dp"
                android:id="@+id/chatLog"
                android:editable="false"
                android:gravity="top"
                android:padding="10dp"
                android:textSize="15sp"
                tools:ignore="Deprecated"
                android:scrollbars="vertical"
                android:background="#E6E6E6"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"

        android:background="@android:color/darker_gray">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:editable="true"
            android:text="Text"
            tools:ignore="Deprecated"
            android:layout_margin="5dp"
            android:id="@+id/sendMsgBox" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="출력"
            android:layout_margin="5dp"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>
